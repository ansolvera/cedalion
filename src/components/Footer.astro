<style lang="scss">
	@import "../styles/variables.scss";

	.footer--logo {
		width: auto;
		height: 3rem;
	}

	.footer--bottom p {
		font-size: 0.875rem;
		line-height: 1;
	}

	.footer--links {
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-items: flex-start;
		gap: 1rem;

		li {
			font-size: 0.875rem;
			line-height: 1;
			transition: color 0.3s ease-in-out;

			&:hover {
				color: map-get($primary, "500");
			}
		}
	}

	[astro-icon] {
		width: auto;
		height: 1.125rem;
		color: map-get($gray, "300");
		transition: color 0.3s ease-in-out;

		&:hover {
			color: map-get($gray, "900");
		}

		&:not(last-of-type) {
			margin-right: 1rem;
		}
	}
</style>
