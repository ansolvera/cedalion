---
export interface Props {
  content?: string;
}

const { content } = Astro.props;
---

<div class="eyebrow">
  {content}
</div>

<style lang="scss">
  @import "../styles/variables.scss";

  .eyebrow {
    display: inline-block;
    margin-bottom: 1rem;
    padding-left: 0.5em;
    font-size: 1rem;
    line-height: 1;
    color: map-get($gray, "500");
    border-left: 2px solid map-get($primary, "500");
  }
</style>
