---
export interface Props {
    href?: string;
    label?: string;
    isWhite?: boolean;
    isFullWidth?: boolean;
}

const { href = "#", label = "Click here", isWhite, isFullWidth } = Astro.props;
---

<a href={href} class:list={['btn', {white: isWhite}, {full: isFullWidth}]}>
    {label}
</a>

<style lang="scss">
    @import "../styles/variables.scss";

    .btn {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1rem;
        border: 1px solid transparent;
        border-radius: 0.25rem;
        font-size: 1rem;
        line-height: 1;
        font-weight: 600;
        color: white;
        text-align: center;
        background-color: map-get($primary, "500");
        text-decoration: none;
        transition: all 0.3s ease-in-out;

        &:hover {
            background-color: map-get($primary, "400");
        }

        &:active {
            background-color: map-get($primary, "600");
        }

        &.white {
            color: map-get($primary, "500");
            background-color: white;
            border-color: map-get($gray, "50");

            &:hover {
                color: map-get($primary, "400");
            }

            &:active {
                color: map-get($primary, "500");
            }

        }

        &.full {
            display: flex;
            width: 100%;
        }

        & + & {
            margin-left: 1rem;
        }

    }
</style>